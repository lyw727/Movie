<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:cardBackgroundColor="#FFFFFFFF"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="30dp"
                android:padding="5dp"
                app:srcCompat="@drawable/movie" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/movieName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="제목"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/peopleCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:gravity="right"
                    android:paddingRight="30dp"
                    android:text="관객 수"
                    android:textColor="#FF0000FF"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/peopleCount1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-22dp"
                    android:gravity="right"
                    android:paddingRight="12dp"
                    android:text="명"
                    android:textColor="#FF0000FF"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/movieRank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:gravity="left"
                    android:paddingLeft="1dp"
                    android:text="순위"
                    android:textColor="#ff0000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/movieRank1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-22dp"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:text="위"
                    android:textColor="#ff0000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/movieaudiAcc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-15dp"
                    android:gravity="right"
                    android:paddingRight="124dp"
                    android:text="누적관계수"
                    android:textColor="#7CFC00"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/movieaudiAcc1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-22dp"
                    android:gravity="left"
                    android:paddingLeft="44dp"
                    android:text="누적관계수                 명"
                    android:textColor="#7CFC00"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/moviesalesAcc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:gravity="right"
                    android:paddingRight="90dp"
                    android:text="누적매출액"
                    android:textColor="#00BFFF"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/moviesalesAcc1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-22dp"
                    android:gravity="left"
                    android:paddingLeft="44dp"
                    android:text="누적매출액                          원"
                    android:textColor="#00BFFF"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/moviemovieCd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:gravity="right"
                    android:paddingRight="27dp"
                    android:text="대표코드"
                    android:textColor="#FF99FF"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/moviemovieCd1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:gravity="right"
                    android:paddingRight="100dp"
                    android:text="대표코드"
                    android:textColor="#FF99FF"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/movieshowCnt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:gravity="right"
                    android:paddingRight="228dp"
                    android:text="상영된 횟수"
                    android:textColor="#CC99FF"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/movieshowCnt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:gravity="right"
                    android:paddingRight="210dp"
                    android:text="회"
                    android:textColor="#CC99FF"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>